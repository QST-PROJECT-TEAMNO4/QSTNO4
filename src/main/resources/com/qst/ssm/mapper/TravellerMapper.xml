<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qst.ssm.mapper.TravellerMapper">
    <select id="getOrdersTraveller" resultType="traveller" parameterType="int">
        <![CDATA[
        select
	        lkname,
	        sex,
	        phoneNum,
	        credentialsType,
	        credentialsNum,
	        travellerType
        from
	        traveller
        where
	        id in (
		         select
			       travellerId
		        from
			       or_tr
		        where
			       orderId = 2
	)
        ]]>
    </select>
</mapper>