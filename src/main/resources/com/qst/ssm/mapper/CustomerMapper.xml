    <update id="update"  parameterType="com.qst.ssm.entity.Customer" >
        <![CDATA[
            update customer
            set     email = #{email},
                    username = #{username},
                    PASSWORD = #{password},
                    phoneNum = #{phoneNum}
            WHERE id= #{id}
        ]]>
    </update>

    <delete id="delete" parameterType="int">
        <![CDATA[
               delete from customer
               where id=#{id}
        ]]>

    </delete>



